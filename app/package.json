{
  "name": "peruse",
  "productName": "Peruse",
  "version": "1.0.0",
  "description": "Electron application boilerplate based on React, React Router, Webpack, React Hot Loader for rapid application development",
  "main": "./main.js",
  "scripts": {
    "rebuild": "npm rebuild --runtime=electron --disturl=https://atom.io/download/atom-shell --build-from-source",
    "postinstall": "download_deps --package package.json"
  },
  "author": {
    "name": "Josh Wilson",
    "email": "joshuef@gmail.com",
    "url": "https://github.com/joshuef"
  },
  "license": "MIT",
  "dependencies": {
    "@maidsafe/safe-node-app": "0.4.1",
    "deps_downloader": "https://s3.eu-west-2.amazonaws.com/deps-downloader/deps_downloader-0.1.0.tgz",
    "enum": "2.5.0",
    "ffi": "2.2.0",
    "i18n": "0.8.3",
    "react-icons": "^2.2.3",
    "ref": "1.3.5"
  },
  "download_deps": {
    "system_uri": {
      "mirror": "https://s3.eu-west-2.amazonaws.com/system-uri",
      "version": "v0.2.3",
      "targetDir": "extensions/safe/dist",
      "filePattern": "^.*\\.(dll|so|dylib)$"
    },
    "safe_authenticator": {
      "mirror": "https://s3.eu-west-2.amazonaws.com/safe-client-libs",
      "version": "v0.4.0",
      "targetDir": "extensions/safe/dist",
      "filename": "safe_authenticator",
      "filePattern": "^.*\\.(dll|so|dylib)$",
      "force": true
    },
    "ENV": {
      "dev": {
        "safe_authenticator": {
          "filename": "safe_authenticator-mock"
        }
      },
      "test": {
        "system_uri": {
          "targetDir": "extensions/safe/dist"
        },
        "safe_authenticator": {
          "filename": "safe_authenticator-mock",
          "targetDir": "extensions/safe/dist"
        }
      },
      "win32": {
        "libwinpthread-1": {
          "mirror": "https://s3.eu-west-2.amazonaws.com/libwinpthread",
          "version": "v0.1.0",
          "targetDir": "extensions/safe/dist",
          "filePattern": "^libwinpthread-1.dll$"
        },
        "ENV": {
          "test": {
            "libwinpthread-1": {
              "targetDir": "extensions/safe/dist"
            }
          }
        }
      }
    }
  }
}
