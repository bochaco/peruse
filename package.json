    "font-awesome": "^4.7.0",
    "history": "^4.6.1",
    "immutable": "^3.8.1",
    "pauls-electron-rpc": "^4.0.1",
    "postcss": "^6.0.8",
    "postcss-loader": "^2.0.6",
    "postcss-scss": "^1.0.2",
    "precss": "^2.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.4",
    "react-router": "3",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.2",
    "redux-cli-logger": "^2.0.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "source-map-support": "^0.4.10"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x",
    "yarn": "0.21.3"
  }
}
