    "mocha-webpack": "^0.7.0",
    "node-sass": "^4.5.2",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "redux-logger": "^3.0.1",
    "sass-loader": "^6.0.3",
    "sinon": "^2.1.0",
    "spectron": "^3.6.1",
